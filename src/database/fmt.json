{
    "fmt": {
        "git_link": "git@github.com:fmlib/fmt.git",
        "description": "A modern formatting library.",
        "repository_url": "https://github.com/fmtlib/fmt",
        "repo_type": "static",
        "cmake_alias": "fmt::fmt",
        "instructions": {
            "install": [
                "mkdir -p :target_path",
                "git clone :git_link :cache_path",
                "cp -r :cache_path :target_path"
            ],
            "uninstall": ["rm -rf target/debug/deps/:requested_package"],
            "version": [
                "cd :current_path/target/debug/deps/:package_name && git describe --tags --abbrev=0"
            ]
        },
        "tags": ["format", "fmt", "print", "string template"]
    }
}
