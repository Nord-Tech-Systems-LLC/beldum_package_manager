{
    "spdlog": {
        "git_link": "git@github.com:gabime/spdlog.git",
        "description": "A cool tool for various utilities.",
        "repository_url": "https://github.com/gabime/spdlog",
        "repo_type": "static",
        "cmake_alias": "spdlog::spdlog",
        "instructions": {
            "install": [
                "git clone :git_link :cache_path",
                "cp -r :cache_path :target_path"
            ],
            "uninstall": ["rm -rf target/debug/deps/:requested_package"],
            "version": [
                "cd :current_path/target/debug/deps/:package_name && git describe --tags --abbrev=0"
            ]
        },
        "tags": ["cpp", "logging", "cpp11", "header-only", "spdlog"]
    }
}
